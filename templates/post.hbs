<h1>{{title}}</h1>


{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input id="title" class="form-control" value=title}}
    </div>

    <div class= "form-group">
      <label for="body"> Body</label>
      {{textarea id="body" class="form-control" rows="15" value=body}}
    </div>

    <button class="btn btn-primary" {{action "save"}}> Save Changes</button>
  </form>


{{else}}

  <h2>{{body}}</h2>

  <button class="btn btn-primary" {{action 'edit'}}> Edit Post </button>
  <button class="btn btn-danger" {{action 'delete'}}> Delete Post </button>

{{/if}}
